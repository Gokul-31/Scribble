<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blackish"
    tools:context=".Frag1">

    <ImageView
        android:id="@+id/f1_im"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/f1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_here"
        app:layout_constraintBottom_toTopOf="@+id/f1_im"
        app:layout_constraintEnd_toStartOf="@+id/f1_im"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/f1_im"
        app:layout_constraintTop_toBottomOf="@+id/f1_im" />

</androidx.constraintlayout.widget.ConstraintLayout>